{
  "instance": {
    "type": "object",
    "additionalProperties": false,

    "properties": {
      "enabled": {
        "type": "boolean",
        "default": true
      },

      "forceRename": {},

      "prefix": {},

      "suffix": {},

      "annotations": {
        "$ref": "definitions.json#/annotations"
      },

      "labels": {
        "$ref": "definitions.json#/labels"
      },

      "vaultAuthRef": {
        "type": "string"
      },

      "namespace": {
        "type": "string"
      },

      "mount": {
        "type": "string"
      },

      "path": {
        "type": "string"
      },

      "type": {
        "type": "string"
      },

      "version": {
        "type": "integer"
      },

      "refreshAfter": {
        "type": "string"
      },

      "hmacSecretData": {
        "type": "boolean",
        "default": true
      },

      "rolloutRestartTargets": {
        "type": "array",
        "items": {
          "$ref": "vaultSecrets.json#/vault.rolloutRestartTargets"
        }
      },

      "rolloutRestartControllers": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },

      "destination": {
        "type": "object",
        "$ref": "vaultSecrets.json#/vault.destination"
      }
    },
    "required": ["path", "mount"]
  }
}
