{
  "instance": {
    "type": "object",
    "additionalProperties": false,

    "properties": {
      "enabled": {
        "type": "boolean",
        "default": true
      },

      "forceRename": {},

      "prefix": {},

      "suffix": {},

      "annotations": {
        "$ref": "definitions.json#/annotations"
      },

      "labels": {
        "$ref": "definitions.json#/labels"
      },

      "vaultAuthRef": {
        "type": "string"
      },

      "namespace": {
        "type": "string"
      },

      "requestHTTPMethod": {
        "type": "string",
        "enum": ["GET", "PUT", "POST"]
      },

      "mount": {
        "type": "string"
      },

      "path": {
        "type": "string"
      },

      "params": {
        "type": "object",
        "additionalProperties": {
          "type": "string"
        }
      },

      "renewalPercent": {
        "type": "integer",
        "default": 67
      },

      "revoke": {
        "type": "boolean",
        "default": false
      },

      "allowStaticCreds": {
        "type": "boolean",
        "default": false
      },

      "rolloutRestartControllers": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },

      "rolloutRestartTargets": {
        "type": "array",
        "items": {
          "$ref": "vaultSecrets.json#/vault.rolloutRestartTargets"
        }
      },

      "destination": {
        "type": "object",
        "$ref": "vaultSecrets.json#/vault.destination"
      }
    },

    "refreshAfter": {
      "type": "string"
    },
    "required": ["path", "mount"]
  }
}
